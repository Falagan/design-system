{
  "name": "lib-global",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "lib-global/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "lib-global/ng-package.json",
        "tailwindConfig": "lib-global/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "lib-global/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "lib-global/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "lib-global/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "lib-global/.storybook",
        "browserTarget": "lib-global:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/lib-global",
        "configDir": "lib-global/.storybook",
        "browserTarget": "lib-global:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c lib-global/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "lib-global:build-storybook",
        "staticFilePath": "dist/storybook/lib-global",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "lib-global:build-storybook:ci"
        }
      }
    }
  }
}
